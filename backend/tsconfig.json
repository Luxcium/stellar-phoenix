{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "@jest/globals"
    ],
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}